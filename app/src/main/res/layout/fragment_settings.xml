<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="14dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.NotesListFragment">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_button_dark_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size_default"
        android:text="@string/dark_theme"
        android:textSize="@dimen/text_size_default" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_button_add_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size_default"
        android:text="@string/add_data"
        android:textSize="@dimen/text_size_default" />

    <LinearLayout
        android:layout_margin="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_main_font"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="@string/main_font"
            android:textSize="@dimen/text_size_default" />

        <EditText
            android:id="@+id/edit_text_view_main_font"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned"
            android:textSize="@dimen/text_size_default" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="@dimen/margin_size_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_optional_font"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="@string/optional_font"
            android:textSize="@dimen/text_size_default" />

        <EditText
            android:id="@+id/edit_text_view_optional_font"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned"
            android:textSize="@dimen/text_size_default" />
    </LinearLayout>

</LinearLayout>